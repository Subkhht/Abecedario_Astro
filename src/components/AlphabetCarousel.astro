---
const abecedario =
  "A B C D E F G H I J K L M N Ñ O P Q R S T U V W X Y Z".split(" ");
---

<section class="alphabet-section" aria-labelledby="carousel-title">
  <h2 id="carousel-title" class="section-title">ABECEDARIO INTERACTIVO</h2>
  <p class="subtitle">Desplázate para explorar • Haz clic para escuchar</p>

  <div class="carousel-container" id="alphabet-carousel">
    <div class="carousel-track">
      {
        abecedario.map((letra) => (
          <div
            class="carousel-item"
            role="button"
            tabindex="0"
            aria-label={`Letra ${letra}`}
            data-letra={letra}
          >
            <span class="letter-text">{letra}</span>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .letter-text {
    font-family: "Orbitron", monospace;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary);
    text-shadow: 0 0 10px currentColor;
  }
</style>
